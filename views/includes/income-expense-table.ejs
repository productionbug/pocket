<div class="income-expense-table">
	<ul class="nav nav-tabs justify-content-center" id="myTab" role="tablist">
		<li class="nav-item">
			<a
				class="nav-link active nav-income"
				id="home-tab"
				data-toggle="tab"
				href="#home"
				role="tab"
				aria-controls="home"
				aria-selected="true"
				><span class="dollar-sign">$</span>Income</a
			>
		</li>
		<li class="nav-item">
			<a
				class="nav-link nav-expense"
				id="profile-tab"
				data-toggle="tab"
				href="#profile"
				role="tab"
				aria-controls="profile"
				aria-selected="false"
				><span class="dollar-sign">ðŸ’°</span>Expense</a
			>
		</li>
	</ul>
	<div class="tab-content text-center" id="myTabContent">
		<div
			class="tab-pane fade show active"
			id="home"
			role="tabpanel"
			aria-labelledby="home-tab"
		>
			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Transaction</th>
						<th scope="col">$ Amount</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% if (allIncomes.length > 0) { %> <% let i = 1; for (let
					income of allIncomes) { %>
					<tr>
						<th scope="row"><%=i%></th>
						<td><%=income.title%></td>
						<td><%=income.amount%></td>
						<td>
							<div class="row">
								<div class="col-2 offset-md-4">
									<form
										onclick="deleteIncome(event, this.id)"
										id="<%=income.incomeId%>"
									>
										<button
											class="delete-btn"
											type="submit"
										>
											<span
												class="far fa-trash-alt"
											></span>
										</button>
									</form>
								</div>
								<div class="col-2">
									<form action="/edit-income-page">
										<input
											type="hidden"
											name="title"
											value="<%=income.title%>"
										/>
										<input
											type="hidden"
											name="amount"
											value="<%=income.amount%>"
										/>
										<input
											type="hidden"
											name="incomeId"
											value="<%=income.incomeId%>"
										/>
										<button type="submit" class="edit-btn">
											<span class="far fa-edit"></span>
										</button>
									</form>
								</div>
							</div>
						</td>
					</tr>
					<% i++; } %> <% } else { %>
					<th scope="row">-</th>
					<td class="text-center">No Incomes Posted</td>
					<td></td>
					<td></td>

					<% } %>
				</tbody>
			</table>
		</div>
		<div
			class="tab-pane fade"
			id="profile"
			role="tabpanel"
			aria-labelledby="profile-tab"
		>
			<table class="table table-striped table-dark">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Transaction</th>
						<th scope="col">$ Amount</th>
						<th scope="col"></th>
					</tr>
				</thead>
				<tbody>
					<% if (allExpenses.length > 0) { %> <% let i = 1; for (let
					expense of allExpenses) { %>
					<tr>
						<th scope="row"><%=i%></th>
						<td><%=expense.title%></td>
						<td><%=expense.amount%></td>
						<td>
							<div class="row">
								<div class="col-2 offset-md-4">
									<form
										onclick="deleteExpense(event, this.id)"
										id="<%=expense.expenseId%>"
									>
										<button
											class="delete-btn"
											type="submit"
										>
											<span
												class="far fa-trash-alt"
											></span>
										</button>
									</form>
								</div>
								<div class="col-2">
									<form action="/edit-expense-page">
										<input
											type="hidden"
											name="title"
											value="<%=expense.title%>"
										/>
										<input
											type="hidden"
											name="amount"
											value="<%=expense.amount%>"
										/>
										<input
											type="hidden"
											name="expenseId"
											value="<%=expense.expenseId%>"
										/>
										<button type="submit" class="edit-btn">
											<span class="far fa-edit"></span>
										</button>
									</form>
								</div>
							</div>
						</td>
					</tr>
					<% i++; } %> <% } else { %>
					<th scope="row">-</th>
					<td class="text-center">No Expenses Posted</td>
					<td></td>
					<td></td>

					<% } %>
				</tbody>
			</table>
		</div>
	</div>
</div>
